<div class="row">
  <div class="col-md-12">
    #if ($word)
      <h1>$word.getUserWord() definitions: </h1>
      <ul>
        #foreach($definition in $word.getDefinitions())
         <li>$definition.getUserDefinition()</li>
        #end
      </ul>
    #else
      <p>Word does not have a definition.</p>
    #end

    <a href="/words/$word.getId()/definitions/new">Add a new Definition</a>
    <br>
    <a href="/words">All Words</a>
  </div>
</div>
