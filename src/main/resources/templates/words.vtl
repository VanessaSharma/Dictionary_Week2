<div class="row">
  <div class="col-md-12">
    #if ($words)
      <h1>List of Words:</h1>
      <ul>
        #foreach($word in $words)
         <li><a href="/words/$word.getId()">$word.getUserWord()</a></li>
        #end
      </ul>
    #else
      <p>There are no words as of now.</p>
    #end

    <a href="/words/new">Add a New Word</a>
  </div>
</div>
