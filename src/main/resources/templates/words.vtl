<h1>Word List!</h1>

#if ($words)
  <ul>
    #foreach ($word in $words)
      <li>$word.getUserWord()</li>
    #end
  </ul>
#else
  <p>No New Words!</p>
#end

<p>Add a new Word:</p>

<form action="/words" method="post">
  <label for="userWord">Your New Word/label>
  <input id="userWord" name="userWord" type="text">

  <button type="submit" class="btn btn-default">Add Word</button>
</form>
