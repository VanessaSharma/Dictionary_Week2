<div class="row">
  <div class="col-md-12">
   <h1>Add your new Definition</h1>

    <form action="/definitions" method="post">
      <input id="wordId" name="wordId" type="hidden" value="$word.getId()">

      <div class="form-group">
        <label for="userInput">Definition: </label>
        <input id="userInput" name="userInput" type="text" class="form-control">
      </div>

      <button type="submit" class="btn btn-success">Add Definition</button>
    </form>
  </div>
</div>
